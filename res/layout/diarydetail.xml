<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DetailBack"
	android:orientation="vertical"
	android:background="@drawable/hou9"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	>
	<LinearLayout
		android:orientation="horizontal"		
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>                                     	<!-- 标题部分 -->
		<TextView
			android:text="@string/tvTitle"
			style="@style/text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<EditText
		    android:id="@+id/etModifyTitle"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#00000000"
		    android:fontFamily="微软雅黑"
		    android:singleLine="true"
		    android:textColor="#66cdaa" />

		</LinearLayout>
		
	<LinearLayout
		android:orientation="horizontal"	
		android:paddingLeft="3dip"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		>										
		<TextView
			android:id="@+id/dttm"
			style="@style/tvDatetime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            />
											<!-- 日期时间部分 -->
		
		<LinearLayout
			android:orientation="horizontal"	
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:gravity="right"
			>
			                                        <!-- 天气部分 -->
			<TextView                      
				style="@style/text"
				android:text="@string/tvweather"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				/>

			<Spinner
			    android:id="@+id/spinner_weather"
			    android:layout_width="70dp"
			    android:layout_height="70dp"
			    android:layout_gravity="center_vertical"
			    android:background="#00000000"
			    android:drawSelectorOnTop="false" />
		    									<!-- 心情部分 -->
			<TextView
				style="@style/text"
				android:text="@string/tvStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				/>

			<Spinner
			    android:id="@+id/spinner_face"
			    android:layout_width="45dp"
			    android:layout_height="45dp"
			    android:layout_gravity="center_vertical"
			    android:background="#00000000"
			    android:drawSelectorOnTop="false" />

			</LinearLayout>
		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"		
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
		>										<!-- 内容部分 -->

		<EditText
		    android:id="@+id/etModifyDiary"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#00000000"
		    android:fontFamily="微软雅黑"
		    android:gravity="top"
		    android:hint="@string/hintDiary"
		    android:scrollbars="vertical"
		    android:textColor="#66cdaa" />

		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:gravity="bottom"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>										<!-- 按钮部分 -->

		<Button
		    android:id="@+id/btnModifyDiary"
		    style="@style/button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/save"
		    android:paddingRight="30dp" />

		<Button
		    android:id="@+id/btnModifyDiaryBack"
		    style="@style/button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/goback"
		    android:paddingLeft="20dp" />

		<Button
		    android:id="@+id/btnModifyDiaryUpdate"
		    style="@style/button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/update"
		    android:paddingLeft="20dp" />

		</LinearLayout>
	</LinearLayout>